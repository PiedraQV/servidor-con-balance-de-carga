<section class="container ">
	<h3 >Ingresa un producto</h3>
	<form id="form-add-product">
		<div class='mb-3'>
			<label for='name'>Nombre</label>
			<input id="name-product" class="form-control" type='text' name='name' />
		</div>
		<div class='mb-3'>
			<label for='price'>Precio</label>
			<input id="price-product" class="form-control" type='number' name='price' />
		</div>
		<div class='mb-3'>
			<label for='img'>Foto URL</label>
			<input id="img-product" class="form-control" type='url' name='img' />
		</div>
		<div class='mb-3'>
			<input class="btn btn-primary" type='submit' value='Enviar' />
		</div>
	</form>
</section>
<section class="container ">
	<h3 >Vista de Productos</h3>
	<table class="table table-dark">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Precio</th>
				<th>Foto</th>
			</tr>
		</thead>
		<tbody id="table-products"></tbody>
	</table>
	<h5 id="no-products" class="bg-light p-4">No hay productos listados</h5>
</section>
<section class="container">
	<h3>Mensajes</h3>
	<label for='email'>Email</label>
	<br>
	<input id="user-email"  type="mail" id="usermail" placeholder="Ingresa tu email">
	<div id="table-chat" class="my-4"></div>
	<form id="chat-form" >
		<label for='chatmessage'>Mensaje</label>
		<br>
		<input id="chat-message"  type="text" name="chatmessage"
			placeholder="Ingresa tu mensaje...">
		<br>
		<br>

		<button class="btn btn-primary" type="submit">Enviar</button>
	</form>
</section>